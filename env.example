# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=blog_db

# JWT
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_please_change_this_in_production
JWT_EXPIRES_IN=30m

# Application
NODE_ENV=development
PORT=4000

# Session
SESSION_SECRET=your_session_secret_min_32_chars_please_change_this
SESSION_TIMEOUT=1800000

# HTTPS (pour développement local avec certificat auto-signé)
HTTPS_ENABLED=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# CORS
CORS_ORIGIN=http://localhost:3000

# Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

